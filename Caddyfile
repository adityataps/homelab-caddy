# PiHole
pihole.homelab.local {
	route {
		crowdsec
		redir / /admin
		reverse_proxy https://{$PIHOLE_IP}:{$PIHOLE_PORT:443} {
			transport http {
				tls_insecure_skip_verify
			}
		}
	}
}

# Caddy
caddy.homelab.local {
	route {
		crowdsec
		reverse_proxy localhost:{$CADDY_PORT:2019}
		basic_auth {
			{$CADDY_API_USERNAME} {$CADDY_API_HASHED_PASSWORD}
		}
	}
}

