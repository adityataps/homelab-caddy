######################################
### Caddyfile for reverse proxying ###
######################################

### Hardware ##########

# Gateway (Wired router)
gateway.homelab.local {
    reverse_proxy {$GATEWAY_IP}
}

# Access point (Wi-Fi router)
wireless.homelab.local {
    reverse_proxy {$WIRELESS_IP}
}

# Server rack managed switch
switch.homelab.local {
    reverse_proxy {$SWITCH_IP}
}

### Servers ##########

# Proxmox VE
pve.homelab.local {
    reverse_proxy {$PVE_IP}:{$PVE_PORT}
}

# Unraid NAS
unraid.homelab.local {
    reverse_proxy {$UNRAID_IP}:{$UNRAID_PORT}
}

### PVE LXCs ##########

# Wireguard
wireguard.homelab.local {
    reverse_proxy {$WIREGUARD_IP}:{$WIREGUARD_PORT}
}

# Omada Controller
omada.homelab.local {
    reverse_proxy {$OMADA_IP}:{$OMADA_PORT}
}

# Unbound DNS
unbound.homelab.local {
    reverse_proxy {$UNBOUND:IP}:{$UNBOUND_PORT}
}

# PiHole
pihole.homelab.local {
    reverse_proxy {$PIHOLE_IP}:{$PIHOLE_PORT}
