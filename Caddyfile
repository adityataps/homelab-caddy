# Promtheus PVE Exporter
prometheus-pve.homelab.local {
	route {
		crowdsec
		redir / /pve?target={$PVE_IP}
		reverse_proxy {$PROMETHEUSPVE_IP}:{$PROMETHEUSPVE_PORT:9221}
	}
}
